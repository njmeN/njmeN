<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="?attr/colorPrimary">

    <TextView
        android:id="@+id/textViewWiki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is wikipedia?"
        android:textSize="22sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgWikiIcon"
        android:paddingStart="16dp"
        android:paddingBottom="2dp"/>
    <TextView
        android:id="@+id/textViewWikiDet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a free online encyclopedia"
        app:layout_constraintTop_toBottomOf="@id/textViewWiki"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:paddingBottom="16dp"
        android:paddingStart="16dp" />


    <ImageView
        android:id="@+id/imgWikiIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_wikipedia_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textViewWiki"
        android:paddingStart="16dp"
        android:paddingBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>